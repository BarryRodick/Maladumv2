{
  "manifest_version": 3,
  "name": "Maladum Event Cards",
  "short_name": "Maladum",
  "version": "1.0.0",
  "description": "Event card deck builder for Maladum",
  "author": "barryrodics",
  "start_url": "/Maladumv2/",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#1a1a1a",
  "icons": [
    {
      "src": "/Maladumv2/logos/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/Maladumv2/logos/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ContentMain.js", "web-client-content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["index.html", "styles.css", "deckbuilder.js", "maladumcards.json", "difficulties.json"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
