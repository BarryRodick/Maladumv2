{
  "manifest_version": 3,
  "name": "Maladum Event Cards",
  "short_name": "MaladumCards",
  "version": "1.0.0",
  "description": "Track and manage event cards for Maladum games",
  "author": "barryrodics",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logos/gameicon.jpg",
      "48": "logos/gameicon.jpg",
      "128": "logos/gameicon.jpg"
    }
  },
  "icons": {
    "16": "logos/gameicon.jpg",
    "48": "logos/gameicon.jpg",
    "128": "logos/gameicon.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ContentMain.js", "web-client-content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["index.html", "styles.css", "deckbuilder.js", "maladumcards.json", "difficulties.json"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
